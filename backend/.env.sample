# Database Configuration
# PostgreSQL database connection URL
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL="postgresql://waibo_user:waibo_password@localhost:5432/waibo_db"

# Server Configuration
# Port where the backend server will run
PORT=3001

# Version information for API documentation
VERSION="1.0.0"

# CORS Configuration
# Frontend application URL for CORS policy
CORS_ORIGIN="http://localhost:3000"

# JWT Token Configuration
# Secret key for signing JWT tokens (use a strong, random string in production)
JWT_SECRET="your_super_secret_jwt_key_here_change_in_production"

# JWT token expiration time (examples: 1h, 30m, 7d)
JWT_EXPIRES_IN="1h"

# JWT refresh token expiration time
JWT_REFRESH_EXPIRES_IN="7d"

# RabbitMQ Configuration
# RabbitMQ connection string for message queuing
RABBITMQ_CONNECTION_STRING="amqp://guest:guest@localhost:5672"

# Delay in milliseconds before requeuing failed messages
RABBITMQ_REQUEUE_DELAY_MS=30000

# OpenAI Configuration
# OpenAI API key for AI language model integration
OPENAI_API_KEY="sk-your-openai-api-key-here"

# OpenAI model to use (examples: gpt-4o-mini, gpt-4, gpt-3.5-turbo)
OPENAI_MODEL="gpt-4o-mini"

# Maximum number of output tokens for OpenAI responses
OPENAI_MAX_OUTPUT_TOKENS=1024
